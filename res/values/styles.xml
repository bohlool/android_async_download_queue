<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light"></style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowNoTitle">True</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="st_txt_for_dailog_detail_heading_about">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_normal</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingBottom">@dimen/padding_normal</item>
        <item name="android:paddingTop">@dimen/padding_normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_very_large</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="st_txt_for_dailog_detail_screen">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/padding_normal</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">@dimen/font_default</item>
    </style>

    <!-- Style for text view and buttons in to be use in diffrent views -->
    <style name="st_btn_blue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/margin_normal</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/font_default</item>
    </style>

    <style name="st_single_white_line">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/line_dimenion</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="st_single_gray_line">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/line_dimenion</item>
        <item name="android:background">@color/app_color_grey</item>
    </style>

    <style name="st_heading_for_detail_screen">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:gravity">center</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_very_large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="st_btn_gry_simple">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:padding">@dimen/padding_normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_default</item>
    </style>

    <style name="st_audio_video_list_cell_thumb">
        <item name="android:layout_width">@dimen/audio_list_cell_thumb_width</item>
        <item name="android:layout_height">@dimen/audio_list_cell_thumb_height</item>
        <item name="android:layout_margin">@dimen/margin_large</item>
        <item name="android:padding">@dimen/padding_basic</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="st_audio_video_list_cell_txt_title">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/app_background_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/font_large</item>
    </style>

    <style name="st_audio_video_list_cell_txt_description">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_default</item>
    </style>

    <style name="st_txt_no_item_found">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_margin">@dimen/margin_large</item>
        <item name="android:padding">@dimen/padding_normal</item>
        <item name="android:text">@string/error_msg_no_item_found</item>
        <item name="android:textColor">@color/app_color_grey</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:visibility">gone</item>
    </style>

</resources>